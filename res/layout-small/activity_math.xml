        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:height="30dp"
        android:inputType="none"
        android:singleLine="true" >
        <requestFocus />
    </EditText>

    
    
    
    
    
    
